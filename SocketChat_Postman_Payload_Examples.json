	"Field_Descriptions": {
		"UserName": {
			"type": "string",
			"maxLength": 200,
			"required": false,
			"description": "Name of the user sending the message"
		},
		"User_id": {
			"type": "number (integer, positive)",
			"required": true,
			"description": "ID of the user sending the message (required for create, optional for update)"
		},
		"TextMessage": {
			"type": "string",
			"maxLength": 5000,
			"required": false,
			"description": "Text content of the message"
		},
		"fileImage": {
			"type": "string (URL)",
			"maxLength": 500,
			"required": false,
			"description": "URL of the file/image attached to the message"
		},
		"emozi": {
			"type": "string",
			"maxLength": 10,
			"required": false,
			"description": "Emoji character(s) for the message"
		},
		"Status": {
			"type": "boolean",
			"required": false,
			"default": true,
			"description": "Status of the chat message (true = active, false = deleted/inactive)"
		},
		"Chat_id": {
			"type": "number",
			"required": false,
			"autoGenerated": true,
			"description": "Auto-incrementing ID for the chat message (generated automatically)"
		},
		"created_by": {
			"type": "number",
			"required": false,
			"autoGenerated": true,
			"description": "ID of the user who created the message (automatically set from auth token)"
		},
		"created_at": {
			"type": "datetime",
			"required": false,
			"autoGenerated": true,
			"description": "Timestamp when the message was created (automatically set)"
		},
		"updated_by": {
			"type": "number",
			"required": false,
			"autoGenerated": true,
			"description": "ID of the user who last updated the message (automatically set from auth token on update)"
		},
		"updated_at": {
			"type": "datetime",
			"required": false,
			"autoGenerated": true,
			"description": "Timestamp when the message was last updated (automatically set on update)"
		}
	},
	"Allowed_File_Types": {
		"images": ["image/jpeg", "image/jpg", "image/png", "image/gif", "image/webp"],
		"documents": [
